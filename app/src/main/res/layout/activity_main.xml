<?xml version="1.0" encoding="utf-8"?>
<android.widget.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

<android.widget.LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context="ryoma.mobile.newscard.MainActivity">

    <ImageView
        android:id="@+id/imageNews1"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:contentDescription="kakakiky | kok manja"
        app:srcCompat="@drawable/news1"/>

    <TextView
        android:id="@+id/textNews1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="@string/news_one"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/imageNews2"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:contentDescription="liputan6 | Adhyaksa bagi-bagi"
        app:srcCompat="@drawable/news2"/>

    <TextView
        android:id="@+id/textNews2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="@string/news_two"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification"
        android:layout_marginBottom="25dp"
        android:layout_weight="1" />

</android.widget.LinearLayout>
</android.widget.ScrollView>